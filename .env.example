# LLM Settings
GROQ_API_KEY=your_groq_api_key_here
LLM_MODEL=llama-3.1-8b-instant
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2048

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/docrag

# Application Settings
MAX_UPLOAD_SIZE_MB=50
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RETRIEVAL=5
SUMMARIZATION_TOP_K=12
MAX_LLM_CONTEXT_SIZE=32000
DEFAULT_QUESTIONS_PER_DOCUMENT=5
MAX_QUESTIONS_PER_REQUEST=20
QUESTION_DEDUP_SIMILARITY_THRESHOLD=0.9
QUESTION_GENERATION_MAX_ATTEMPTS=3
PREVENT_DUPLICATE_ANSWERS=true
REQUEST_TIMEOUT_SECONDS=30
JOB_TIMEOUT_SECONDS=300

# Environment
ENVIRONMENT=development
DEBUG=true
